---
const { title } = Astro.props;
import icon from '../../public/icon.ico';
---

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&display=swap');
  @font-face {
    font-family: 'vcr';
    src: url('../assets/fonts/vcr.ttf');
  }

  html {
    scroll-behavior: smooth;
    scroll-padding-top: 64px;
  }

  body {
    font-family: 'vcr';
    background-color: #000;
  }
  .inter {
    font-family: 'Inter', sans-serif;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  p,
  span {
    color: #fff;
  }

  .hero-text {
    animation: fade 0.75s ease-in;
  }

  .hero-image {
    animation: fade 1.5s ease-in;
  }

  @keyframes fade {
    0% {
      opacity: 0;
    }

    100 % {
      opacity: 1;
    }
  }

  .github:hover > svg {
    fill: #ccc;
    transition-duration: 0.25s;
  }

  .linkedin:hover > svg {
    fill: #0a66c2;
    transition-duration: 0.25s;
  }

  .gmail:hover > svg {
    fill: #ea4335;
    transition-duration: 0.25s;
  }

  /* 
    project title -> text-2xl md:text-3xl lg:text-4xl xl:text-5xl
    subtitle -> text-xl md:text-2xl lg:text-3xl xl:text-4xl
    text -> text-lg lg:text-xl xl:text-2xl
  */
</style>

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/x-icon' href={icon} />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <section class='container px-6 md:px-16 lg:px-24 mx-auto'>
      <slot />
    </section>
  </body>
</html>
