---
import phoneCt from '../../public/images/phone.png';
const { props } = Astro.props;
const { title, text, appImage, technologies, links } = props;
---

<section
  class='xl:[&:nth-child(2)]:flex-row-reverse flex flex-col xl:flex-row gap-10'>
  <!-- DESCRIPTION -->
  <div class='flex-1 flex flex-col justify-center space-y-10'>
    <h2
      class='text-2xl md:text-3xl lg:text-4xl xl:text-5xl text-cyan-green text-center xl:text-start'>
      {title}
    </h2>
    <p class='text-lg lg:text-xl xl:text-2xl'>{text}</p>
    <!-- TOOLS -->
    <div class='flex justify-center gap-8 flex-wrap'>
      {
        technologies.map((props: any) => {
          return (
            <div class='flex flex-col gap-2 items-center justify-self-center'>
              <img
                class='md:h-16 h-10'
                src={`../../public/icons/${props.icon}`}
                alt={props.name}
              />
              <h4 class='text-white md:text-base text-sm'>{props.name}</h4>
            </div>
          );
        })
      }
    </div>
    <!-- LINKS -->
    <div class='flex gap-4 justify-center flex-wrap'>
      {
        links.map((props: any) => {
          return (
            <a
              href={props.url}
              target='_blank'
              rel='noopener noreferrer'
              class='text-white text-lg lg:text-xl xl:text-2xl capitalize py-3 px-5 border-white border-2 rounded-xl hover:border-cyan-green hover:text-cyan-green duration-200'>
              {props.text}
            </a>
          );
        })
      }
    </div>
  </div>
  <!-- IMAGE -->
  <div class='flex-1'>
    <div class='flex justify-center items-center relative'>
      <img src={phoneCt} alt={title} />
      <img
        class='absolute w-[264px] h-[567px] bg-black rounded-3xl object-cover'
        src={`../../public/images/${appImage}`}
        alt={title.toLowerCase()}
      />
    </div>
  </div>
</section>
